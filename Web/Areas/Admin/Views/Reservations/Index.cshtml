@model IEnumerable<Data.Model.Entities.Order>

@{
    ViewBag.Title = "Quản lý đặt món";
    ViewBag.Current = "Reservations";
}

<h2>Quản lý đặt món</h2>
<link type="text/css" href="~/Assets/styles/order.css" rel="stylesheet" />

<p>
    <a href="/Admin/Orders/Create">Đăt món</a>
</p>

<div class="row">
@foreach (var item in Model)
{
    <div class="col-md-3">
        <div class="panel panel-primary">
            <div class="panel-heading">@item.CreateAt</div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-6">
                        <h4 class="card-title"><i class="fa fa-cubes"></i> @item.Table.Code</h4>
                    </div>
                    <div class="col-md-6">
                        <h6 class="card-subtitle mb-2">@string.Format("{0:n0} đ", item.Total)</h6>
                        <p class="card-text">
                            <i class="fa fa-cutlery" aria-hidden="true"></i>
                            @item.OrderDishes.Count món
                        </p>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <a data-url="/Admin/Orders/Details/@item.Id" id="@item.Id" class="show-modal" href="#">
                    Chi tiết
                </a>|
                <a href="/Admin/Orders/Edit/@item.Id" class="card-link">Chỉnh sửa</a>
            </div>
        </div>
    </div>
    
    
}
</div>

<script src="/Assets/datatable/order.js"></script>