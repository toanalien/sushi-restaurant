@model Data.Model.Entities.Employee

<div class="form-group">
  <label for="Name">Họ và tên</label>
    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
</div>
<div class="form-group">
  <label for="Department">Bộ phận</label>
    @Html.EditorFor(model => model.Department, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(model => model.Department, "", new { @class = "text-danger" })
</div>
<div class="form-group">
  <label for="Position">Vị trí</label>
    @Html.EditorFor(model => model.Position, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(model => model.Position, "", new { @class = "text-danger" })
</div>
<div class="form-group">
  <label for="Sex">Giới tính</label>
    @Html.DropDownList("Sex", null, htmlAttributes: new { @class = "form-control" })
    @Html.ValidationMessageFor(model => model.Sex, "", new { @class = "text-danger" })
</div>
<div class="form-group">
  <label for="Birthday">Ngày sinh</label>
    <input type="date" class="form-control" id="Birthday" name="Birthday" value="@string.Format("{0:yyyy-MM-dd}", Model.Birthday)" />
    @Html.ValidationMessageFor(model => model.Birthday, "", new { @class = "text-danger" })
</div>
<div class="form-group">
  <label for="Phone">Điện thoại</label>
    @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
</div>
<div class="form-group">
  <label for="Address">Địa chỉ</label>
    @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
</div>