@model Data.Model.Entities.Employee

@{
    ViewBag.Title = "Create";
    ViewBag.Current = "Employees";
}
<div class="col-lg-6 col-xs-12">
    <div class="box-content card white2">
        <h4 class="box-title">Tạo nhân viên</h4>
        <div class="card-content">
            @using (Html.BeginForm("Create", "Employees", null, FormMethod.Post,
                                          new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    @{ Html.RenderPartial("_Form", Model); }

                    <div class="form-group">
                      <label for="RoleId">Phân loại</label>
                        @Html.DropDownList("RoleName", null, htmlAttributes: new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                      <label for="Email">Email (login id)</label>
                        <input type="email" id="Email" name="Email" class="form-control" value="@ViewBag.Email" required/>
                    </div>
                    <div class="form-group">
                      <label for="Password">Password</label>
                        <input type="password" id="Password" name="Password" class="form-control" value="@ViewBag.Password" />
                        <span class="field-validation-valid text-danger" data-valmsg-for="Password" data-valmsg-replace="true">
                          @if (ViewBag.Errors != null)
                          {
                          @ViewBag.Errors[0].ToString();
                          }
                        </span>
                    </div>
                    <div class="form-group">
                      <label for="RetypePassword">Nhập lại Password</label>
                        <input type="password" id="RetypePassword" name="RetypePassword" class="form-control" value="@ViewBag.RetypePassword" />
                    </div>
                    <button type="submit" class="btn btn-primary btn-sm waves-effect waves-light pull-right">Lưu</button>
                    <br>
                    <p></p>
                </div>
            }
        </div>
    </div>
</div>