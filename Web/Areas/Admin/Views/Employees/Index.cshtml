@model IEnumerable<Data.Model.Entities.Employee>

@{
    ViewBag.Title = "Index";
    ViewBag.Current = "Employees";
}
<div class="box-content">
    <table id="example" class="table table-striped table-bordered display employeeTable dataTable" style="width:100%">
        <thead>
            <tr>
                <th>
                    Tên nhân viên
                </th>
                <th>
                   Tên bộ phận
                </th>
                <th>
                   Vị trí
                </th>
                <th>
                    Giới tính
                </th>
                <th>
                    Ngày sinh
                </th>
                <th>
                    Số điện thoại
                </th>
                <th>
                    Account email
                </th>
                <th>
                    Loại tài khoản
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr id="@item.ID">
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Department)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Position)
                    </td>
                    <td>
                        @(item.Sex == 0 ? "Không xác định" : "" )
                        @(item.Sex == 1 ? "Nam" : "" )
                        @(item.Sex == 2 ? "Nữ" : "" )
                    </td>
                    <td>
                        @string.Format("{0:dd-MM-yyyy}", item.Birthday)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AspNetUser.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AspNetUser.AspNetRoles.FirstOrDefault().Name)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", "Employees", new { id=item.ID })">
                            <i class="ico zmdi zmdi-edit zmdi-hc-fw"></i>
                        </a>
                        <a data-url="@Url.Action("Details", "Employees", new { id=item.ID })" id="@item.ID" class="show-modal">
                            <i class="ico zmdi zmdi-eye zmdi-hc-fw"></i>
                        </a>
                        <a data-url="@Url.Action("Delete", "Employees", new { id=item.ID })" id="@item.ID" class="delete-object">
                            <i class="ico zmdi zmdi-delete zmdi-hc-fw"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
<script src="/Assets/datatable/employee.js"></script>