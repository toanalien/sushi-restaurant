@model IEnumerable<Data.Model.Entities.Category>

@{
    ViewBag.Title = "Index";
}

    <div class="box-content">
        <table id="example" class="table table-striped table-bordered display categoryTable dataTable" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Nhóm món ăn
                    </th>
                    <th>
                        Miêu tả
                    </th>
                    
                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                    <tr id="@item.ID">
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", "Categories", new { id=item.ID })">
                                <i class="ico zmdi zmdi-edit zmdi-hc-fw"></i>
                            </a>
                            <a data-url="@Url.Action("Details", "Categories", new { id=item.ID })" id="@item.ID" class="show-modal">
                                <i class="ico zmdi zmdi-eye zmdi-hc-fw"></i>
                            </a>
                            <a data-url="@Url.Action("Delete", "Categories", new { id=item.ID })" id="@item.ID" class="delete-object">
                                <i class="ico zmdi zmdi-delete zmdi-hc-fw"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
<script src="/Assets/datatable/category.js"></script>