@model IEnumerable<Data.Model.Entities.Promotion>

@{
    ViewBag.Title = "Index";
    ViewBag.Current = "Promotions";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Tên khuyến mãi
        </th>
        <th>
            Giảm giá
        </th>
        <th>
            Ngày tạo
        </th>
        <th>
            Ngày hết hạn
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DiscountPercent) %
        </td>
        <td>
            @string.Format("{0:dd-MM-yyyy}", item.CreateAt)
        </td>
        <td>
            @string.Format("{0:dd-MM-yyyy}", item.ExpireAt)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
