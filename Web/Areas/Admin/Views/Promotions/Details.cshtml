@model Data.Model.Entities.Promotion

@{
    ViewBag.Title = "Details";
}
<div class="box-content card white2">
    <h2>Details</h2>

    <div>
        <h4>Promotion</h4>
        <hr />
        <dl class="dl-horizontal">

            <dt>
                Tên khuyến mãi
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt>
                Giảm giá (%)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DiscountPercent)
            </dd>

            <dt>
                Nội dung
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt>
                Ngày tạo
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CreateAt)
            </dd>

            <dt>
                Ngày hết hạn
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ExpireAt)
            </dd>

            <dt>
                Các món áp dụng
            </dt>

            <dd>
                @foreach (var dish in Model.Dishes) {
                    <p>@dish.Name</p>
                }
            </dd>

        </dl>
    </div>
</div>