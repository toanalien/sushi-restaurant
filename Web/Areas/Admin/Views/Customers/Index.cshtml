@model IEnumerable<Data.Model.Entities.Customer>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Họ và tên
        </th>
        <th>
            Giới tính
        </th>
        <th>
            Ngày sinh
        </th>
        <th>
            Số điện thoại
        </th>
        <th>
            Địa chỉ
        </th>
        <th>
            Hạng thành viên
        </th>
        <th>
            Ngày tạo
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @(item.Sex == 0 ? "Không xác định" : "" )
            @(item.Sex == 1 ? "Nam" : "" )
            @(item.Sex == 2 ? "Nữ" : "" )
        </td>
        <td>
            @string.Format("{0:dd-MM-yyyy}", item.Birthday)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @(item.Class == 0 ? "Bạc" : "" )
            @(item.Class == 1 ? "Vàng" : "" )
            @(item.Class == 2 ? "Kim Cương" : "" )
        </td>
        <td>
            @string.Format("{0:dd-MM-yyyy}", item.CreateAt)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.ID }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
