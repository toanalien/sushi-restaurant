@model IEnumerable<Data.Model.Entities.Customer>

@{
    ViewBag.Title = "Index";
    ViewBag.Current = "Customers";
}
<div class="box-content">
    <table id="example" class="table table-striped table-bordered display customerTable dataTable" style="width:100%">
        <thead>
            <tr>
                <th>
                    Họ và tên
                </th>
                <th>
                    Giới tính
                </th>
                <th>
                    Ngày sinh
                </th>
                <th>
                    Số điện thoại
                </th>
                <th>
                    Địa chỉ
                </th>
                <th>
                    Hạng thành viên
                </th>
                <th>
                    Ngày tạo
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr id="@item.ID">
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @(item.Sex == 0 ? "Không xác định" : "" )
                        @(item.Sex == 1 ? "Nam" : "" )
                        @(item.Sex == 2 ? "Nữ" : "" )
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Birthday)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @(item.Class == 0 ? "Bạc" : "" )
                        @(item.Class == 1 ? "Vàng" : "" )
                        @(item.Class == 2 ? "Kim Cương" : "" )
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreateAt)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", "Customers", new { id=item.ID })">
                            <i class="ico zmdi zmdi-edit zmdi-hc-fw"></i>
                        </a>
                        <a data-url="@Url.Action("Details", "Customers", new { id=item.ID })" id="@item.ID" class="show-modal">
                            <i class="ico zmdi zmdi-eye zmdi-hc-fw"></i>
                        </a>
                        <a data-url="@Url.Action("Delete", "Customers", new { id=item.ID })" id="@item.ID" class="delete-object">
                            <i class="ico zmdi zmdi-delete zmdi-hc-fw"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
<script src="/Assets/datatable/customer.js"></script>