@using Web.Models
@model RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutAuthenticate.cshtml";
}


<div id="single-wrapper">
    @using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "frm-single", role = "form" }))
    {
        <div class="inside">
            @Html.AntiForgeryToken()
            <div class="title"><strong>Admin UI</strong></div>

            <div class="frm-title">Register</div>

            @Html.ValidationSummary("", new { @class = "text-danger" }) 

            <div class="frm-input">
                @Html.TextBoxFor(m => m.Email, new { @class = "frm-inp", id = "username", placeholder = "Your Email" })
                <i class="fa fa-user frm-ico"></i>
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>

            <div class="frm-input">
                @Html.PasswordFor(m => m.Password, new { @class = "frm-inp", id = "password", placeholder = "Your Password" })
                <i class="fa fa-lock frm-ico"></i>
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger"})
            </div>

            <div class="frm-input">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "frm-inp", id = "password", placeholder = "Your Password" })
                <i class="fa fa-lock frm-ico"></i>
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
            </div>

            <button type="submit" class="frm-submit">Registy<i class="fa fa-arrow-circle-right"></i></button>
            <div class="pull-right">
                <div class="button">
                    <i class="fa fa-sign-in"></i>@Html.ActionLink("Already have account? Login", "Login")
                </div>
            </div>

            <div class="frm-footer"> Levia © 2017</div>
        </div>
    }
</div>